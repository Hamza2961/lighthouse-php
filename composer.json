{
    "name": "spatie/lighthouse-php",
    "description": "Programatically run Google Lighthouse using PHP",
    "keywords": [
        "spatie",
        "lighthouse-php"
    ],
    "homepage": "https://github.com/spatie/lighthouse-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Lighthouse\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Lighthouse\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
